<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.HealthTrackR.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="navigationContentDescription">@string/content_description_back_icon</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleCentered">true</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.HealthTrackR.LargeButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
        <item name="android:paddingBottom">@dimen/large_btn_padding_bottom</item>
        <item name="android:paddingTop">@dimen/large_btn_padding_top</item>
        <item name="android:elevation">@dimen/btn_elevation</item>
    </style>

    <style name="Widget.HealthTrackR.LargeButton.Form">
        <item name="android:layout_marginTop">@dimen/form_margin_top</item>
    </style>

    <style name="Widget.HealthTrackR.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_margin_top</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.HealthTrackR.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_margin_top</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="Widget.HealthTrackR.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="Widget.HealthTrackR.EditText.Value">
        <item name="android:layout_marginStart">@dimen/text_view_value_margin_start</item>
    </style>

    <style name="Widget.HealthTrackR.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_view_margin_top</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.Value">
        <item name="android:layout_marginStart">@dimen/text_view_value_margin_start</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.NoElements" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintWidth_max">@dimen/text_view_max_width</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_view_title_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/text_view_title_margin_end</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintWidth_max">@dimen/text_view_max_width</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_view_subtitle_margin_top</item>
        <item name="android:layout_marginStart">@dimen/text_view_subtitle_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_view_subtitle_margin_end</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintWidth_max">@dimen/text_view_max_width</item>
    </style>

    <style name="Widget.HealthTrackR.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/clickable_min_size</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="backgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="FormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_margin_top</item>
        <item name="android:paddingTop">@dimen/spinner_layout_padding_top</item>
        <item name="android:paddingHorizontal">@dimen/spinner_layout_padding_horizontal</item>
    </style>

    <style name="FormLayout.Outlined">
        <item name="android:background">@drawable/form_layout_container_outlined</item>
    </style>

    <style name="FormLayout.Filled">
        <item name="android:background">@drawable/form_layout_container_filled</item>
    </style>

    <style name="Widget.HealthTrackR.SmallButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:elevation">@dimen/btn_elevation</item>
        <item name="android:layout_marginVertical">@dimen/form_margin_top</item>
    </style>

    <style name="Widget.HealthTrackR.FloatingActionButton.Primary" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/floating_button_layout_margin</item>
    </style>

    <style name="Widget.HealthTrackR.FloatingActionButton.Primary.BelowStatus" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/floating_button_layout_margin</item>
    </style>

    <style name="RelativeLayoutGrid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/relative_layout_grid_layout_margin</item>
        <item name="android:padding">@dimen/relative_layout_grid_padding</item>
        <item name="android:background">@drawable/relative_layout_grid_container</item>
        <item name="android:elevation">@dimen/btn_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.HealthTrackR.TextView.Grid">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>
    
    <style name="Widget.HealthTrackR.ImageButton.Grid" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/image_btn_grid_layout_margin</item>
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondaryContainer</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="StatusLayout">
        <item name="android:layout_width">@dimen/layout_status_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/status_container</item>
        <item name="android:padding">@dimen/layout_status_padding</item>
        <item name="android:layout_margin">@dimen/layout_status_margin</item>
        <item name="android:elevation">@dimen/layout_status_elevation</item>
        <item name="android:layout_gravity">top|end</item>
    </style>
</resources>