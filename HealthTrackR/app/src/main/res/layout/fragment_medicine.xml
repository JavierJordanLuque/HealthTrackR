<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.treatments.medicines.MedicineFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonModifyMedicine"
            style="@style/Widget.HealthTrackR.FloatingActionButton.Primary.BelowStatus"
            android:layout_gravity="top|end"
            android:contentDescription="@string/content_description_modify_medicine"
            app:srcCompat="@drawable/ic_modify" />

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/StatusLayout">

            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_in_progress"
                android:contentDescription="@string/content_description_status_in_progress"
                app:tint="@color/amber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/treatments_status_in_progress"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewStatus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vMarginGuidelineStart"
                    style="@style/vMarginGuidelineStart">

                </androidx.constraintlayout.widget.Guideline>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vMarginGuidelineEnd"
                    style="@style/vMarginGuidelineEnd">

                </androidx.constraintlayout.widget.Guideline>

                <TextView
                    android:id="@+id/textViewTitle"
                    style="@style/Widget.HealthTrackR.TextView.Title"
                    android:text="@string/medicines_app_bar_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/vMarginGuidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/vMarginGuidelineStart"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/Widget.HealthTrackR.TextView.Subtitle"
                    app:layout_constraintEnd_toEndOf="@id/vMarginGuidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/vMarginGuidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitle"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/linear_layout_padding_top"
                    android:paddingBottom="@dimen/linear_layout_padding_bottom"
                    app:layout_constraintEnd_toEndOf="@id/vMarginGuidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/vMarginGuidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/textViewName"
                    app:layout_constraintWidth_max="@dimen/text_view_max_width">

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:layout_marginTop="0dp"
                        android:text="@string/medicines_active_substance" />

                    <TextView
                        android:id="@+id/textViewActiveSubstance"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:text="@string/medicines_administration_route" />

                    <TextView
                        android:id="@+id/textViewAdministrationRoute"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:text="@string/medicines_dose" />

                    <TextView
                        android:id="@+id/textViewDose"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/text_view_margin_top"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:text="@string/medicines_initial_dosing_time" />

                    <TextView
                        android:id="@+id/textViewInitialDosingTime"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:text="@string/medicines_dosing_frequency" />

                    <TextView
                        android:id="@+id/textViewDosingFrequency"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/text_view_margin_top"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        style="@style/Widget.HealthTrackR.TextView.Bold"
                        android:text="@string/medicines_next_dose" />

                    <TextView
                        android:id="@+id/textViewNextDose"
                        style="@style/Widget.HealthTrackR.TextView.Value" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    app:layout_constraintEnd_toEndOf="@id/vMarginGuidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/vMarginGuidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout"
                    app:layout_constraintWidth_max="@dimen/text_view_max_width">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/vCenterGuideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5">

                    </androidx.constraintlayout.widget.Guideline>


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/buttonMedicineNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/colorSecondaryContainer"
                        android:src="@drawable/ic_notification"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/vCenterGuideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSecondaryContainer"
                        app:elevation="@dimen/btn_elevation"
                        android:contentDescription="@string/content_description_access_medicine_notifications">

                    </com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/buttonDeleteMedicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/colorErrorContainer"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/vCenterGuideline"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnErrorContainer"
                        app:elevation="@dimen/btn_elevation"
                        android:contentDescription="@string/content_description_delete_medicine">

                    </com.google.android.material.floatingactionbutton.FloatingActionButton>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>