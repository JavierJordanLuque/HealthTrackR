<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeColor="?attr/colorAccent"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_linear_layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold" />

        <TextView
            style="@style/Widget.HealthTrackR.TextView.Bold"
            android:text="@string/medicines_administration_route" />

        <TextView
            android:id="@+id/textViewAdministrationRoute"
            style="@style/Widget.HealthTrackR.TextView.Value" />

        <TextView
            style="@style/Widget.HealthTrackR.TextView.Bold"
            android:text="@string/medicines_dose" />

        <TextView
            android:id="@+id/textViewDose"
            style="@style/Widget.HealthTrackR.TextView.Value" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/text_view_margin_top"
            android:background="?attr/colorAccent" />

        <TextView
            style="@style/Widget.HealthTrackR.TextView.Bold"
            android:text="@string/medicines_next_dose" />

        <TextView
            android:id="@+id/textViewNextDose"
            style="@style/Widget.HealthTrackR.TextView.Value" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>