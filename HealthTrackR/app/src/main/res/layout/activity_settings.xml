<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:theme="@style/ThemeOverlay.HealthTrackR.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonResetSettings"
                    style="@style/Widget.HealthTrackR.SmallButton"
                    android:text="@string/settings_reset"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vMarginGuidelineStart"
                    style="@style/vMarginGuidelineStart" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vMarginGuidelineEnd"
                    style="@style/vMarginGuidelineEnd" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/linear_layout_padding_top"
                    android:paddingBottom="@dimen/linear_layout_padding_bottom"
                    app:layout_constraintEnd_toEndOf="@id/vMarginGuidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/vMarginGuidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/buttonResetSettings"
                    app:layout_constraintWidth_max="@dimen/text_field_max_width">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_language"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutLocale"
                        style="@style/FormLayout.Filled">

                        <Spinner
                            android:id="@+id/spinnerLocale"
                            style="@style/Widget.HealthTrackR.Spinner"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/settings_colour_scheme"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                    <RadioGroup
                        android:id="@+id/radioGroupTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/form_margin_top">

                            <RadioButton
                                android:id="@+id/radioButtonSystemDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/settings_appearance_system_default"
                                android:drawableEnd="@drawable/ic_light_mode"
                                android:drawableTint="?attr/colorOnSurface"
                                android:drawablePadding="8dp"
                                android:contentDescription="@string/content_description_settings_appearance_system_default" />

                            <RadioButton
                                android:id="@+id/radioButtonLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_appearance_light"
                                android:drawableEnd="@drawable/ic_light_mode"
                                android:drawableTint="?attr/colorOnSurface"
                                android:drawablePadding="8dp"
                                android:contentDescription="@string/content_description_settings_appearance_light" />

                            <RadioButton
                                android:id="@+id/radioButtonDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_appearance_dark"
                                android:drawableEnd="@drawable/ic_dark_mode"
                                android:drawableTint="?attr/colorOnSurface"
                                android:drawablePadding="8dp"
                                android:contentDescription="@string/content_description_settings_appearance_dark" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:padding="10dp"
                        android:background="@drawable/autostart_container">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/settings_auto_startup_info"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                        <Button
                            android:id="@+id/buttonAutostart"
                            style="@style/Widget.HealthTrackR.SmallButton"
                            android:layout_marginVertical="0dp"
                            android:layout_gravity="center"
                            android:text="@string/settings_auto_startup_enable"
                            android:textAppearance="@style/TextAppearance.HealthTrackR.BodySmall" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>